<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_student_fees_status_view" model="ir.actions.act_window">
            <field name="name">Student Fees Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.fees.status</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_fave">
                    Show Student Fees Status
                </p>
            </field>
        </record>

        <record id="student_fees_status_form_view" model="ir.ui.view">
            <field name="name">Student Fees Status Form View</field>
            <field name="model">student.fees.status</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="student_id"/>
                                <field name="fees_status"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="student_fees_status_tree_view" model="ir.ui.view">
            <field name="name">Student Fees Status Tree View</field>
            <field name="model">student.fees.status</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="student_id"/>
                    <field name="fees_status"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>